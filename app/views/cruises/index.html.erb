<div class="container">
  <h1>Our <span>Cruise</span> list</h1>
    <h4>Take a look at our best offers and travel destinations:</h4>
  <div class="d-flex row justify-content-center">
    <% @cruises.each do |cruise| %> 
      <div class="col-lg-4">
        <div class="card bg-light my-3">
          <%= image_tag(cruise.image_url, height: 300) %>
          <div class="card-body d-flex align-items-center"> 
            <div class="">
              <h5 class="card-title   "> <%= cruise.name %> </h5>
            </div>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item"> Location: <%= cruise.location %></li>
            <li class="list-group-item"> Price: Rs<%= cruise.price.to_i %></li>
          </ul>
          <div class="card-body">
            <%= link_to "Enquire",  cruise_path(cruise), class: "btn btn-booknow card-link"%>
          </div>
        </div>
      </div>
    <% end %>
  </div>
