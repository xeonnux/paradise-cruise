<div class="container">
  <h1>Our <span>Cruise</span> list</h1>
    <h4>Take a look at our best offers and travel destinations:</h4>

  <div class="d-flex justify-content-center">
    <% @cruises.each do |cruise| %> 
      <div class="row m-4">
        <div class="card bg-light" style="width: 18rem;">
          <div class="card-body" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path("cruise/cd44f8_4593c0c836224fc4a02e1ebb4c261a5f_mv2_tltjme", height: 300, crop: :fit )%>')">
            <h5 class="card-title"> <%= cruise.name %> </h5>
            <p class="card-text"><%= cruise.description.first(40)... %></p>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item"> Location: <%= cruise.location %></li>
            <li class="list-group-item"> Price: Rs<%= cruise.price %></li>
          </ul>
          <div class="card-body">
            <%= link_to "Book Now",  cruise_path(cruise), class: "btn btn-booknow card-link"%>
          </div>
        </div>
      </div>
    <% end %>
  </div>
